{
  "name": "operaton-screenshot-automation",
  "version": "1.0.0",
  "description": "Automated screenshot capture for Operaton documentation",
  "license": "Apache-2.0",
  "author": "Operaton",
  "homepage": "https://operaton.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/operaton/operaton-screenshot-automation.git"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "check": "node scripts/check-connection.js",
    "status": "node scripts/show-status.js",
    "deploy": "node scripts/deploy-processes.js",
    "data": "node scripts/generate-data.js",
    "simulate": "node scripts/simulate-scenarios.js",
    "simulate:tokens": "node scripts/simulate-scenarios.js --tokens",
    "simulate:history": "node scripts/simulate-scenarios.js --history",
    "simulate:tasks": "node scripts/simulate-scenarios.js --tasks",
    "incidents": "node scripts/create-incidents.js",
    "incidents:script": "node scripts/create-incidents.js --script-errors",
    "incidents:service": "node scripts/create-incidents.js --service-errors",
    "capture": "node scripts/capture-screenshots.js",
    "capture:debug": "cross-env HEADLESS=false DEBUG=true node scripts/capture-screenshots.js",
    "capture:cockpit": "node scripts/capture-screenshots.js --category=cockpit",
    "capture:tasklist": "node scripts/capture-screenshots.js --category=tasklist",
    "capture:admin": "node scripts/capture-screenshots.js --category=admin",
    "analyze": "node scripts/analyze-documentation.js",
    "reset": "node scripts/reset-environment.js",
    "reset:force": "node scripts/reset-environment.js --force",
    "reset:instances": "node scripts/reset-environment.js --instances-only",
    "reset:deployments": "node scripts/reset-environment.js --deployments-only",
    "quick": "npm run deploy && npm run data && npm run capture",
    "full": "npm run deploy && npm run data && npm run simulate && npm run incidents && npm run capture",
    "lint": "eslint scripts/",
    "lint:fix": "eslint scripts/ --fix",
    "format:check": "prettier --check \"scripts/**/*.js\" \"config/**/*.json\" \"*.md\"",
    "format": "prettier --write \"scripts/**/*.js\" \"config/**/*.json\" \"*.md\"",
    "validate": "npm run lint && npm run format:check",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install",
    "deps:update:minor": "ncu -u --target minor && npm install",
    "deps:audit": "npm audit",
    "deps:audit:fix": "npm audit fix",
    "prepare": "husky install",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.1",
    "glob": "^11.0.0",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
